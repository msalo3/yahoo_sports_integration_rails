<%= form_with(model: connection, local: true) do |form| %>
  <% if connection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(connection.errors.count, "error") %> prohibited this connection from being saved:</h2>

      <ul>
      <% connection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:refresh_token] && params[:access_token] %>
    <div class="field">
      <%= form.label :access_token %>
      <%= form.text_field :access_token, :readonly => true, id: :connection_access_token, :value => params[:access_token] %>
    </div>

    <div class="field">
      <%= form.label :refresh_token %>
      <%= form.text_field :refresh_token, :readonly => true, id: :connection_refresh_token, :value => params[:refresh_token] %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% else %>
    <div class="field">
      <%= form.label :refresh_token %>
      <%= form.text_field :refresh_token, :readonly => true, id: :connection_refresh_token %>
    </div>

    <div class="field">
      <%= form.label :refresh_token %>
      <%= form.text_field :refresh_token, :readonly => true, id: :connection_refresh_token %>
    </div>

    <div class="actions">
      <%= link_to "Connect to Yahoo!", credentials_oauth_authorize_path(@connection), class: 'btn btn-primary' %>
    </div>
  <% end %>

<% end %>
